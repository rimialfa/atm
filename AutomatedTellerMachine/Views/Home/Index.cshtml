@{
    ViewBag.Title = "Home Page";
}
<style>
</style>

<div class="d-flex justify-content-center">
    <div class="p-4">
        <h3>Welcome to XYZ ATM</h3>
        <form method="post" ng-controller="authCtrl" ng-submit="submitForm()">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Enter your card number" name="number" ng-model="card.number">
            </div>
            <div class="form-group">
                <input type="password" class="form-control"  placeholder="Enter your pin" name="pin" ng-model="card.pin">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <div>
                {{message}}
            </div>
        </form>

    </div>
</div>